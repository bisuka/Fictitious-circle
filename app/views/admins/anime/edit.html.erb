<div class="container">
	<h1>管理者　アニメ編集ページ</h1>

	<!-- アニメ更新 -->
	<div class="row">
		<div class="col-sm-6">
			<%= form_with model:@anime, url:admins_anime_path(@anime), method: :patch, local: true do |anime| %>
				<h2 class="text-center">編集</h2>
				<%= render 'form', anime: anime %>
				<%= anime.submit "更新" %>
				<%= link_to "戻る", admins_anime_path %>
			<% end %>
		</div>

		<div class="col-sm-6">
			<%= render 'list' %>
		</div>
	</div>
</div>
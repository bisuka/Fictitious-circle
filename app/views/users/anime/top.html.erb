<div class="container">
	<b>タグ</b>
	<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
	  <%= link_to "#{tag.name}(#{tag.taggings_count})", { :action => :tag, :name => tag.name } %>
	<% end %>

	<!-- アニメ登録 -->
	<div class="row">
		<div class="col-sm-6">
			<%= form_with model:@anime, url:users_anime_index_path, method: :post, local: true do |anime| %>
				<h2 class="text-center">新着・部員数</h2>
				<% @ranks.each_with_index do |anime, i| %>
					<span><%= i+1 %>位</span>
					<%= anime.anime.circle %><br>
				<% end %>
			<% end %>
		</div>

		<div class="col-sm-6">
			<%= render 'list' %>
		</div>
	</div>
</div>